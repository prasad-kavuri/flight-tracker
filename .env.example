# Flight Tracker Environment Variables
# Copy this file to .env.local and fill in your actual values

# Flight Data API Configuration
# Get your API key from your flight data provider (e.g., FlightRadar24, AviationStack, etc.)
NEXT_PUBLIC_FLIGHT_API_KEY=your_api_key_here
FLIGHT_API_BASE_URL=https://api.example.com

# Application Settings
NEXT_PUBLIC_APP_ENV=development
# Possible values: development, staging, production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Database Configuration (if you add a database later)
# DATABASE_URL=postgresql://user:password@localhost:5432/flight_tracker

# Optional: Analytics (if you add analytics later)
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Optional: Authentication (if you add auth later)
# NEXTAUTH_SECRET=your_secret_key
# NEXTAUTH_URL=http://localhost:3000
